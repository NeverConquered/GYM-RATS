<script>
    // Mobile menu functionality
    document.getElementById('menuIcon').addEventListener('click', function() {
        document.getElementById('sideNavbar').style.width = "250px";
    });

    document.getElementById('closeBtn').addEventListener('click', function() {
        document.getElementById('sideNavbar').style.width = "0";
    });

    // Trainer selection functionality
    document.querySelectorAll('.trainer-item').forEach(item => {
        item.addEventListener('click', function() {
            // Remove active class from all items
            document.querySelectorAll('.trainer-item').forEach(el => {
                el.classList.remove('active');
            });
            
            // Add active class to clicked item
            this.classList.add('active');
            
            // Update trainer name display
            const trainerName = this.querySelector('.trainer-name').textContent.split(' ').slice(0, -1).join(' ');
            document.getElementById('trainerNameDisplay').textContent = trainerName;
            
            // In a real application, you would load the trainer's data here
            // This would update all the details in the right panel
        });
    });

    // Approval and rejection functionality
    document.querySelector('.approve-btn').addEventListener('click', function() {
        const trainerName = document.getElementById('trainerNameDisplay').textContent;
        const notes = document.getElementById('verification-notes').value;
        
        if (confirm(`Are you sure you want to APPROVE ${trainerName}'s application?`)) {
            // Here you would send the approval to your backend
            alert(`${trainerName}'s application has been approved!`);
            
            // Update the status tag of the active trainer in the list
            const activeTrainer = document.querySelector('.trainer-item.active .trainer-name');
            const statusTag = activeTrainer.querySelector('.status-tag');
            statusTag.className = 'status-tag status-approved';
            statusTag.textContent = 'Approved';
        }
    });

    document.querySelector('.reject-btn').addEventListener('click', function() {
        const trainerName = document.getElementById('trainerNameDisplay').textContent;
        const notes = document.getElementById('verification-notes').value;
        
        if (!notes.trim()) {
            alert("Please provide a reason for rejection in the notes field.");
            return;
        }
        
        if (confirm(`Are you sure you want to REJECT ${trainerName}'s application?`)) {
            // Here you would send the rejection to your backend
            alert(`${trainerName}'s application has been rejected!`);
            
            // Update the status tag of the active trainer in the list
            const activeTrainer = document.querySelector('.trainer-item.active .trainer-name');
            const statusTag = activeTrainer.querySelector('.status-tag');
            statusTag.className = 'status-tag status-rejected';
            statusTag.textContent = 'Rejected';
        }
    });
</script>
