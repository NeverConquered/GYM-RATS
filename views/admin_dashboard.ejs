<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymRats - Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/admin.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap">
</head>
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/home" class="brand-name">GymRats</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin_dashboard" class="nav-link active">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_user" class="nav-link">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_trainers" class="nav-link">
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_membership" class="nav-link">
                        <span>Memberships</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_nutrition" class="nav-link">
                        <span>Nutrition Plans</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_exercises" class="nav-link">
                        <span>Exercises</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_workouts" class="nav-link">
                        <span>Workout Plans</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_verifier" class="nav-link">
                        <span>Verifiers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin_settings" class="nav-link">
                        <span>Settings</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Admin Dashboard</h2>
                <div class="right-container">
                    <div class="search-container">
                        <img src="https://img.icons8.com/ios/250/8A2BE2/search--v1.png" height="18px" alt="Search Icon" />
                        <input type="text" placeholder="Search..." size="20" style="font-size: 14px;" />
                    </div>
                    <div class="user-info">
                        <div class="avatar">A</div>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- First Row: User Stats -->
            <div class="dashboard-grid">
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Total Users</h3>
                            </div>
                            <div class="stats-number">12,452</div>
                            <div class="stats-label">+12% from last month</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Active Members</h3>
                            </div>
                            <div class="stats-number">8,574</div>
                            <div class="stats-label">+5% from last month</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Personal Trainers</h3>
                            </div>
                            <div class="stats-number">157</div>
                            <div class="stats-label">+9% from last month</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Content Verifiers</h3>
                            </div>
                            <div class="stats-number">68</div>
                            <div class="stats-label">+15% from last month</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Second Row: Revenue Stats -->
            <div class="dashboard-grid">
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Total Revenue</h3>
                            </div>
                            <div class="stats-number">$892,845</div>
                            <div class="stats-label">All-time platform revenue</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Monthly Revenue</h3>
                            </div>
                            <div class="stats-number">$108,976</div>
                            <div class="stats-label">+8% from last month</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Platinum Members</h3>
                            </div>
                            <div class="stats-number">3,254</div>
                            <div class="stats-label">+12% from last month</div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>New Signups</h3>
                            </div>
                            <div class="stats-number">462</div>
                            <div class="stats-label">+5% from last week</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts -->
            <div class="charts-container">
                <div class="chart-card">
                    <div class="section-header">
                        <h3 class="section-title">Revenue Overview</h3>
                    </div>
                    <div class="chart-container">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
                <div class="chart-card">
                    <div class="section-header">
                        <h3 class="section-title">Member Growth</h3>
                    </div>
                    <div class="chart-container">
                        <canvas id="memberChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Recent Activity Section -->
            <div class="section">
                <div class="section-header">
                    <h3 class="section-title">Recent User Activity</h3>
                    <button class="btn">View All</button>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Activity</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Mitchell</td>
                                <td>john.mitchell@email.com</td>
