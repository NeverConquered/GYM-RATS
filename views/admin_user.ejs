    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Setup interactive elements
            setupResponsiveFeatures();
            setupTabNavigation();
            setupSearchFunctionality();
        });

        function setupResponsiveFeatures() {
            // Navigation buttons
            const navItems = document.querySelectorAll('.nav-link');
            
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    if (!this.getAttribute('href').includes('.html')) {
                        e.preventDefault();
                        navItems.forEach(link => link.classList.remove('active'));
                        this.classList.add('active');
                    }
                });
            });

            // Action buttons
            const actionButtons = document.querySelectorAll('.action-btn');
            actionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.add('clicked');
                    setTimeout(() => {
                        this.classList.remove('clicked');
                    }, 200);
                });
            });

            // Filter button
            const filterBtn = document.getElementById('filterBtn');
            if (filterBtn) {
                filterBtn.addEventListener('click', function() {
                    alert('Filter options would appear here');
                });
            }

            // Pagination buttons
            const pageButtons = document.querySelectorAll('.page-btn');
            pageButtons.forEach(button => {
                button.addEventListener('click', function() {
                    pageButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Add New User button
            const addUserBtn = document.querySelector('.add-btn');
            if (addUserBtn) {
                addUserBtn.addEventListener('click', function() {
                    alert('Add new user form would appear here');
                });
            }
        }

        function setupTabNavigation() {
            const tabs = document.querySelectorAll('.tab');
            const userRows = document.querySelectorAll('#userTableBody tr');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Update active tab
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    const tabType = this.getAttribute('data-tab');
                    
                    // Filter users based on tab
                    userRows.forEach(row => {
                        const statusCell = row.querySelector('.status');
                        const platinumBadge = row.querySelector('.platinum-badge');
                        const newBadge = row.querySelector('.new-badge');
                        
                        switch(tabType) {
                            case 'all':
                                row.style.display = '';
                                break;
                            case 'active':
                                if (statusCell && statusCell.classList.contains('active')) {
                                    row.style.display = '';
                                } else {
                                    row.style.display = 'none';
                                }
                                break;
                            case 'platinum':
                                if (platinumBadge) {
                                    row.style.display = '';
                                } else {
                                    row.style.display = 'none';
                                }
                                break;
                            case 'new':
                                if (newBadge) {
                                    row.style.display = '';
                                } else {
                                    row.style.display = 'none';
                                }
                                break;
                            case 'inactive':
                                if (statusCell && statusCell.classList.contains('inactive')) {
                                    row.style.display = '';
                                } else {
                                    row.style.display = 'none';
                                }
                                break;
                        }
                    });
                });
            });
        }

        function setupSearchFunctionality() {
            const searchInput = document.getElementById('userSearchInput');
            const userRows = document.querySelectorAll('#userTableBody tr');
            
            if (searchInput) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase();
                    
                    userRows.forEach(row => {
                        const userName = row.querySelector('.user-info div:nth-child(2)').textContent.toLowerCase();
                        const userEmail = row.querySelectorAll('td')[1].textContent.toLowerCase();
                        const membership = row.querySelectorAll('td')[2].textContent.toLowerCase();
                        
                        if (userName.includes(searchTerm) || userEmail.includes(searchTerm) || membership.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }
        }
